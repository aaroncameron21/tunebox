doctype html
html(lang='en')
  head
    p!= partials.header
  body(ng-app="VersionApp")
    div.container(ng-controller="VersionController",ng-init="initialize(#{ JSON.stringify(data) });",)
      p!= partials.navbar
      form(id="form")
        h3 {{data.tune.name}} - New Version
        div.well.well-lg
          div.row
            div.col-md-4
              div.input-group
                b Tempo
                br
                input(type='number',name='tempo',ng-value="data.tempo",ng-model="data.tempo")
              div.input-group
                b Key
                br
                input(type='text',name='key',ng-value="data.key",ng-model="data.key")
            div.col-md-8
              b Description
              .input-group(style="width:100%")
                textarea.form-control(rows=3, name='description',placeholder="Describe this version here.",ng-value="data.description",ng-model="data.description")
          br
        input(name='tune', id="tune", type='hidden')
        input(name='_csrf', type='hidden', value=csrfToken)
        button.login.btn.btn-primary.btn-lg.btn-block(type='button',ng-click="submitForm(false)") Save
    p!= partials.footer
    script(src="/ang/version.js")